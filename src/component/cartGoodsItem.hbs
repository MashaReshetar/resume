<div class="my-5">
    {{#each goodsBlock}}
        <div class="card p-2 my-4">
            <div class="row">
                <div class="col-2">
                    <img src="{{this.image}}" class="card-img-top">
                </div>
                <div class="col-4">
                    <h5>{{name}}</h5>
                    <p>{{description}}</p>
                </div>
                <div class="col-2">
                    <div class="my-4">
                        {{#with price}}
                            <p>{{title}}:</p>
                            <p><b>{{value}}</b></p>
                        {{/with}}
                    </div>
                </div>
                <div class="col-2">
                    <div class="my-5">
                        <p>{{amount}}</p>
                    </div>
                </div>
                <div class="col-2">
                    {{#each buttons}}
                        <div class="my-3"> 
                            {{#if isPrimary includeZero=true}}
                                <button type="button" class="btn btn-primary">{{this.text}}</button>
                                {{else}}
                                    {{#if isDanger includeZero=true}}
                                        <button type="button" class=" btn btn-outline-danger">{{this.text}}</button>
                                    {{/if}}
                            {{/if}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    {{/each}}
</div>