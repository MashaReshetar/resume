<div class="my-5">
    {{#each reviewList}}
        <div class="card p-2 mb-5">
            <div class="card p-2">
                {{#with title}}
                    <p><b>{{userName}}</b></p>
                    <p>{{caption}}</p>
                    <p>{{date}}</p>
                {{/with}}
            </div>
                        
            {{#with reviewBody}}
                <div class="card p-2">
                    {{#with seller}}
                        <p>{{title}}: {{value}}</p>
                    {{/with}}
                    {{#with rating}}
                        <p class="my-3">{{title}}: {{value}}</p>
                    {{/with}}
                    <p>{{text}}</p>
                    {{#with advantages}}
                        <p><b>{{title}}</b>:</p>
                        <p>{{text}}</p>
                    {{/with}}
                    {{#with disadvantages}}
                        <p><b>{{title}}</b>:</p>
                        <p>{{text}}</p>
                    {{/with}}

                        <div class="row">
                            <div class="col-6">
                                {{#each images}}
                                    <img  src="{{this}}">
                                {{/each}}
                            </div>
                        </div>
                </div>

                {{#each coments}}
                    <div class="card my-3 ms-5 p-2">
                        <h5>{{userName}}</h5>
                        <p>{{date}}</p>
                        <p>{{text}}</p>
                     </div>   
                {{/each}}
            {{/with}}
        </div>
    {{/each}}
</div>