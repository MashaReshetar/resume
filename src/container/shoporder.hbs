<div>
    <main>
        <section>
            <div class="card mb-5">
                {{#with navigation}}
                    <ul class="nav">
                        {{#each links}}
                            <li class="nav-item">
                                <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.href}}">{{this.text}}</a>
                            </li>
                        {{/each}}
                    </ul>
                {{/with}}
            </div>

            <h1 class="mb-3">{{header}}</h1>

                <div class="row">
                    <div class="col-8">

                    {{#with contacts_data}}
                        <h3>{{title}}</h3>

                        <div class="my-4">
                            {{#each buttons}}
                            
                                {{#if isPrimary includeZero=true}}
                                    <button type="button" class="btn btn-warning me-2">{{this.text}}</button>
                                    {{else}}
                                        {{#if isOutline includeZero=true}} 
                                            <button type="button" class="btn btn-outline-warning">{{this.text}}</button>
                                        {{/if}}
                                {{/if}}
                            
                            {{/each}}
                        </div>

                        {{#with form}}
                            <div class="row ">

                                <div class="col-6 mb-4">
                                    {{#with input}}
                                        {{#with surname}}
                                            <label class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        {{/with}}
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with input}}
                                        {{#with name}}
                                            <label class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        {{/with}}
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with input}}
                                        {{#with phone}}
                                            <label class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        {{/with}}
                                    {{/with}}
                                </div>
                                <div class="col-6 mb-4">
                                    {{#with input}}
                                        {{#with email}}
                                            <label class="form-label">{{label}}</label>
                                            <input class="form-control" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        {{/with}}
                                    {{/with}}
                                </div>
                            </div>

                            <hr>

                            {{#each switch}}
                            <div class="my-4">
                                {{#if isActive includeZero=true}}
                                    <div class="form-check form-switch">
                                        <label class="form-check-label">{{text}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    {{else}}
                                        <div class="form-check form-switch">
                                        <label class="form-check-label">{{text}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    {{/if}}
                                    </div>
                            {{/each}}
                        {{/with}}
                    {{/with}}

                    <hr>

                    </div>

                    <div class="col-4">
                        <div class="card mb-3 pb-2">
                            
                            {{#each action_block}}
                            <div class="m-2 mb-0">
                                {{#if isSuccess includeZero=true}}
                                    <button type="button" class="btn btn-success">{{this.text}}</button>
                                    {{else}}
                                        {{#if isDanger includeZero=true}}
                                        <button type="button" class="btn btn-danger">{{this.text}}</button>
                                        
                                        {{else}}
                                             {{#if isInfo includeZero=true}}
                                            <button type="button" class="btn btn-info">{{this.text}}</button>
                                            {{/if}}
                                        {{/if}}
                                {{/if}}
                               </div> 
                            {{/each}}
                        </div>

                        <div class="card mb-3">
                            <div class="m-2 mb-0">
                                {{#with total}}
                                    <h3>{{title}}</h3>

                                    {{#each item_list}}
                                        <p>{{name}}: <span>{{price}}</span></p>
                                    {{/each}}

                                    <hr>

                                     {{#each additional_info}}
                                        <p>{{text}}: <span>{{value}}</span></p>
                                    {{/each}}
                                
                                    <hr>

                                     {{#with total_price}}
                                        <p>{{text}}: <span>{{value}}</span></p>
                                    {{/with}}

                                    <hr>

                                    {{#each button}}
                                        <div class="mb-2"> 
                                        {{#if isPrimary includeZero=true}}
                                            <button type="button" class="btn btn-primary">{{this.text}}</button>
                                            {{else}}
                                            {{#if isOutline includeZero=true}}
                                                <button type="button" class=" btn btn-outline-primary">{{this.text}}</button>
                                            {{/if}}
                                        {{/if}}
                                        </div>
                                    {{/each}}
                                   
                                {{/with}}
                             </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-8">
                            {{#with delivery}}
                                <h3>{{title}}</h3>

                                <div class="card px-3">
                                    <div class="row">

                                    {{#each select}}
                                        <div class="col-6 p-2">
                                            <label class="form-label">{{label}}</label>

                                            <select class="form-select">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{this.value}}">{{this.text}}</option>
                                                {{/each}}
                                            </select> 
                                         </div>   
                                       {{/each}} 
                                    
                                    </div>
                                </div>

                                <div class="my-3">
                                {{#each delivery_type}}
                                    <div class="form-check">
                                        <input name="list" class="form-check-input" type="radio">
                                        <label class="form-check-label">{{type}}</label>
                                    </div>
                                {{/each}}
                                </div>

                                <hr>

                                {{#with payment}}
                                    <h3>{{title}}</h3>

                                    {{#each list}}
                                         <div class="form-check">
                                            <input name="list" class="form-check-input" type="radio">
                                            <label class="form-check-label">{{type}}</label>
                                            <p class="small">{{description}}</p>
                                        </div>
                                    {{/each}}
                                {{/with}}

                                <hr>

                                {{#with contact}}
                                    <h3>{{title}}</h3>


                                    <div class="row ">

                                        <div class="col-6 mb-4">
                                                {{#with surname}}
                                                    <label class="form-label">{{label}}</label>
                                                    <input class="form-control" placeholder="{{placeholder}}">
                                                    <div class="form-text">{{caption}}</div>
                                                {{/with}}
                                        </div>
                                        <div class="col-6">
                                                {{#with name}}
                                                    <label class="form-label">{{label}}</label>
                                                    <input class="form-control" placeholder="{{placeholder}}">
                                                    <div class="form-text">{{caption}}</div>
                                                {{/with}}
                                        </div>
                                        <div class="col-6">
                                                {{#with phone}}
                                                    <label class="form-label">{{label}}</label>
                                                    <input class="form-control" placeholder="{{placeholder}}">
                                                    <div class="form-text">{{caption}}</div>
                                                {{/with}}
                                        </div>
                                        <div class="col-6 mb-4">
                                                {{#with email}}
                                                    <label class="form-label">{{label}}</label>
                                                    <input class="form-control" placeholder="{{placeholder}}">
                                                    <div class="form-text">{{caption}}</div>
                                                {{/with}}
                                        </div>
                                    </div>
                                {{/with}}

                                <hr>

                                <div class="mb-4">
                                    {{#with coment}}
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                    {{/with}}
                                </div>

                                <hr>

                                {{/with}}

                                {{#with coupon}}
                                    <h3>{{title}}</h3>

                                    {{#with select}}
                                        {{#with availabel_coupon}}
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select form-select-lg">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{this.value}}">{{this.text}}</option>
                                                {{/each}}
                                            </select> 
                                        {{/with}}

                                        <div class="my-3">
                                        {{#with friend_coupon}}
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select form-select-sm">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{this.value}}">{{this.text}}</option>
                                                {{/each}}
                                            </select> 
                                        {{/with}}
                                        </div>
                                    {{/with}}

                                    {{#with add}}
                                        {{#with friend}}
                                            <label class="form-label">{{label}}</label>
                                            <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        {{/with}}

                                        <div class="my-3">
                                        {{#with colleague}}
                                            <label class="form-label">{{label}}</label>
                                            <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                                            <div class="form-text">{{caption}}</div>
                                        {{/with}}
                                        </div>
                                    {{/with}}
                                {{/with}}

                                <hr>

                                {{#with quiz}}
                                    <h3>{{title}}</h3>

                                    {{#with preference}}
                                        <p>{{title}}</p>

                                        <div class="my-3">
                                        {{#each options}}
                                            <div class="form-check">
                                                <input name="list" class="form-check-input" type="radio">
                                                <label class="form-check-label">{{this}}</label>
                                            </div>
                                        {{/each}}
                                        </div>
                                    {{/with}}

                                    {{#with your_expirience}}
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control">
                                    {{/with}}

                                    <div class="my-3">
                                        {{#with purchase_frequency}}
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select form-select-sm">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{this.value}}">{{this.text}}</option>
                                                {{/each}}
                                            </select> 
                                        {{/with}}
                                    </div>

                                    <div class="my-3">
                                        {{#with factors}}
                                            <p>{{title}}</p>
                                            {{#each options}}
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox">
                                                    <label class="form-check-label">{{this}}</label>
                                                </div>
                                            {{/each}}
                                        {{/with}}
                                    </div>
                                {{/with}}
                        </div>
                    </div>
                </div>

                <hr>

                <div class="row">
                {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                            <ul class="nav flex-column">
                                <li class="nav-item ">
                                    <a class="nav-link {{#if @last}} disabled {{/if}}" 
                                        href="{{this.link}}">{{this.text}}</a>
                                </li>
                            </ul>
                        {{/each}}
                    </div>
                {{/each}}
                </div>
        </section>
    </main>
</div>