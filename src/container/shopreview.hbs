<div>
    <main>
        <section>
            <div class="card">
                {{#with navigation}}
                    <ul class="nav">
                        {{#each links}}
                            <li class="nav-item">
                                <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.href}}">{{this.text}}</a>
                            </li>
                        {{/each}}
                    </ul>
                {{/with}}
            </div>

            <div class="my-5">
            {{#with formBlock}}
                <div class="row">
                    <div class="col-8">
                        <h3>{{header}}</h3>
                        {{#with rating}}
                            <p class="my-3">{{title}}: {{value}}</p>
                        {{/with}}

                        {{#with actionBlock}}
                            <ul class="nav nav-tabs">
                                {{#each tabs}}
                                    <li class="nav-item">
                                        <a class="nav-link {{#if @last}} active {{/if}}" href="#">{{this.text}}</a>
                                    </li>
                                {{/each}}
                            </ul>

                            <hr class="my-5">

                            <div class="card p-2">
                                {{#with report}}
                                    <p>{{title}}</p>
                                    <div class="pe-3">
                                        {{#with button}}
                                            <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                                        {{/with}}
                                    </div>
                                {{/with}}
                            </div>
                        {{/with}}

                        <hr class="my-5">

                        {{#with feedbackBlock}}
                            <h3>{{title}}</h3>

                            <div class="row my-3">
                                {{#each buttons}}
                                    <div class="col">
                                        {{#if isWarning includeZero=true}}
                                                <button type="button" class="btn btn-warning">{{this.text}}</button>
                                            {{else}}
                                                {{#if isSuccess includeZero=true}}
                                                    <button type="button" class="btn btn-success">{{this.text}}</button>
                                                {{else}}
                                                    {{#if isDanger includeZero=true}}
                                                    <button type="button" class="btn btn-danger">{{this.text}}</button>
                                                    {{/if}}
                                                {{/if}}
                                        {{/if}}
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>

                    <div class="col-4">
                        {{#with goodsInfo}}
                            <div class="card p-3 mb-3">
                                <img style="width: 75%" src="{{photo}}">
                                <p class="mt-3"><b>{{name}}</b></p>
                            </div>
                            <div class="card p-3 pb-2">
                                <p><b>{{price}}</b></p>
                                <p>
                                    {{#if inMarket includeZero=true}} 
                                        {{inMarket}}
                                    {{/if}}
                                </p>

                                {{#each buttons}}
                                    <div class="pe-0 my-2"> 
                                        {{#if isPrimary includeZero=true}}
                                            <button type="button" class="btn btn-primary">{{this.text}}</button>
                                                {{else}}
                                                {{#if isSecondary includeZero=true}}
                                                    <button type="button" class="btn btn-secondary">{{this.text}}</button>
                                                {{/if}}
                                        {{/if}}  
                                     </div>
                                {{/each}}
                            </div>

                            <div class="card mt-3 p-3 pb-0">
                                {{#with seller}}
                                    <p>{{title}}: <b>{{value}}</b></p>
                                {{/with}}
                            </div>
                        {{/with}}
                    </div>
                </div>
            {{/with}}
            </div>

            <hr>

            {{> reviewItem}}

            {{#with service}}
                <div class="card text-bg-success my-5">
                    
                    <div class="card-body text-center">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        {{#each buttons}}
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            {{/with}}

            <hr>

            <div class="row">
                {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                            <ul class="nav flex-column">
                                <li class="nav-item ">
                                    <a class="nav-link {{#if @last}} disabled {{/if}}" 
                                        href="{{this.link}}">{{this.text}}</a>
                                </li>
                            </ul>
                        {{/each}}
                    </div>
                {{/each}}
            </div>
        </section>
    </main>
</div>