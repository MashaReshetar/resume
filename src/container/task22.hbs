<div>
    <main>
        <section>
            {{#with page_header}}
                <h1 class="text-center">{{title}}</h1>
                <p class="text-center">{{description}}</p>
            {{/with}}

            {{#with section}}
                <div class="card">
                    <div class="card-body">
                        {{#with about_us}}

                            {{#with title_list}}
                                <h1 class="display-6 text-end">{{main}}</h1>
                                <h2 class="text-end">{{sub}}</h2>
                            {{/with}}

                            {{#with button}}
                                <button type="button" class="btn btn-outline-info">{{text}}</button>
                            {{/with}}
                        
                        {{/with}}
                    </div>
                </div>

                <br>

                {{#with advantage}}

                    <div class="card">
                        <div class="card-body">
                            <h1 class="display-5 text-muted">{{title}}</h1>

                    {{#with efficiency}}
                        <div class="card">
                            <div class="card-body">
                                <h1 class="display-4 text-muted">{{title}}</h1>
                                <h6>{{sub_title}}</h6>
                                <p class="text-muted">{{description}}</p>
                                <button type="button" class="btn btn-outline-warning">{{button}}</button>
                            </div>
                        </div>
                    {{/with}}

                    <br>

                    {{#with innovation}}
                        <div class="card">
                            <div class="card-body">
                                <h1 class="display-4 text-center text-muted">{{title}}</h1>
                                <h6 class="text-center">{{sub_title}}</h6>
                                <p class="text-center text-muted">{{description}}</p>
                                <button type="button" class="btn btn-outline-warning">{{button}}</button>

                            </div>
                        </div>
                    {{/with}}

                    <br>

                    {{#with collaboration}}
                        <div class="card">
                            <div class="card-body">
                                <h1 class="display-4 text-end text-muted">{{title}}</h1>
                                <h6 class="text-end">{{sub_title}}</h6>
                                <p class="text-end text-muted">{{description}}</p>
                                <button type="button" class="btn btn-outline-warning">{{button}}</button>

                            </div>
                        </div>
                    {{/with}}
                        </div>
                    </div>
                    {{/with}}
                
                    <br>
                
                {{#with agreement}}
                    <div class="card">
                        <div class="card-body">
                                <h1 class="display-5">{{title}}</h1>

                                {{#with info}}
                                    <div class="card">
                                        <div class="card-body">
                                            <h5>{{sub_title}}</h5>

                                                {{#with detail}}
                                                <div class="card">
                                                    <div class="card-body">
                                                        <p class="text-muted">{{text}}</p>
                                                        <button type="button" class="btn btn-success">{{button}}</button>
                                                    </div>
                                                </div>
                                                {{/with}}
                                        </div>
                                    </div>
                                {{/with}}
                        </div>
                    </div>
                {{/with}}
            {{/with}}
        </section>
    </main>
</div>